
@model List<Products>


<div class="card shadow border-0 my-4">
    <div class="card-Header bg-primary bg-gradient ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-center text-white py-2">Products List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container  ">
            <div class="row pt-4 pb-3">
                
                <div class="col-md-12">
                    <h5 class="text-primary text-end">
                        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary rounded-0">
                            <i class="bi bi-plus-circle"></i> Create New Product
                        </a>
                    </h5>
                </div>
            </div>
            <table id="dataTbl" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                     @foreach(var obj in @Model){ 
                         <tr> 
                          <td>@obj.Title</td> 
                          <td>@obj.ISBN</td> 
                          <td>@obj.ListPrice</td> 
                           <td>@obj.Author</td> 
                             <td>@obj.Category.Name</td> 
                             <td> 
                                 <div class="p-1"> 
                                     <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-primary rounded-0"> 
                                         <i class="bi bi-pencil-square"></i>Edit 
                                     </a> 
                                     <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-primary rounded-0"> 
                                         <i class="bi bi-trash-fill"></i>Delete 
                                     </a> 
                               </div> 
                             </td> 
                         </tr> 
                     } 
                </tbody>
            </table>
        </div>
</div>
</div>


@section Scripts {
    <script src="~/js/product.js"></script>
}

