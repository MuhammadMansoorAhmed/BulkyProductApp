
@model List<Category>


<div class="card shadow border-0 mt-4">
    <div class="card-Header bg-primary bg-gradient ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-center text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container  ">
            <div class="row pt-4 pb-3">
                
                <div class="col-md-12">
                    <h5 class="text-primary text-end">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-0">
                            <i class="bi bi-plus-circle"></i> Create New Category
                        </a>

                    </h5>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @* @foreach(var obj in Model){ *@
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {

                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2 rounded-0">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2 rounded-0">
                                        <i class="bi bi-trash-fill"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>
</div>

