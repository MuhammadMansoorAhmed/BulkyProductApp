@model IEnumerable<Products>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row p-3">
    @foreach(var obj in Model){
        <div class="col-lg-3 col-sm-6">
            <div class="row  p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@obj.ImageUrl" class="card-img-top rounded" style="max-height: 230px;" />
                        <div class="card-body  pb-0">
                            <div class="ps-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@obj.Title</p>
                                <p class="card-title text-warning text-center">@obj.Author</p>
                            </div>
                            <div class="ps-1">
                                <p class="text-dark text-opacity-75 text-uppercase text-center mb-0">List Price <span class="text-decoration-line-through">@obj.ListPrice.ToString("c")</span></p>
                            </div>
                            <div class="ps-1">
                                <p class="text-dark text-opacity-75 text-uppercase text-center ">As low as <span>@obj.Price100.ToString("c")</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id = "@obj.ProductId" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>